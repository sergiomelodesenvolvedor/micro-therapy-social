#!/bin/sh

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo "${YELLOW}ğŸ” Running pre-commit checks...${NC}\n"

# Run lint-staged
echo "${YELLOW}ğŸ“ Checking code style and format...${NC}"
npx lint-staged

if [ $? -ne 0 ]; then
  echo "${RED}âŒ Pre-commit checks failed!${NC}"
  exit 1
fi

echo "${GREEN}âœ… Pre-commit checks passed!${NC}\n"
exit 0
