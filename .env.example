# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# Backend API
VITE_API_URL=http://localhost:3001
NODE_ENV=development
PORT=3001

# Stripe (Payments - Sprint 7+)
VITE_STRIPE_PUBLIC_KEY=pk_test_your-key-here
STRIPE_SECRET_KEY=sk_test_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-secret-here

# OpenAI API (Advanced AI - Sprint 8+)
OPENAI_API_KEY=sk-your-api-key-here

# Telegram Bot (Notifications - Sprint 3+)
TELEGRAM_BOT_TOKEN=your-bot-token-here:xxxx
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/micro_therapy
DATABASE_POOL_SIZE=10

# JWT
JWT_SECRET=your-super-secret-jwt-key-minimum-32-chars
JWT_EXPIRES_IN=7d

# Email (for notifications)
SENDGRID_API_KEY=SG.your-api-key-here
SENDGRID_FROM_EMAIL=noreply@microtherapy.social

# Analytics
POSTHOG_API_KEY=phc_your-key-here
MIXPANEL_TOKEN=your-token-here

# Environment
APP_ENV=development
APP_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
SENTRY_DSN=https://your-sentry-dsn-here

# Security
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=10

# Feature Flags
FEATURE_PREMIUM=false
FEATURE_ADVANCED_AI=false
FEATURE_NOTIFICATIONS=false

# Third Party
REDDIT_API_KEY=your-reddit-api-key
TWITTER_API_KEY=your-twitter-api-key
